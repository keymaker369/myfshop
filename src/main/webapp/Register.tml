<html t:type="layout" title="Registration page"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
      xmlns:p="tapestry:parameter">
<t:zone t:id="addZone">
    <t:delegate to="edit"/>
</t:zone>
<t:block id="edit">
    <t:form t:id="fRegister" t:zone="addZone">
        <p>
            <t:label for="tfUsername">username:</t:label>
            <t:textfield t:id="tfUsername" t:value="username"/>
        </p>
        <p>
            <t:label for="tfPassword">password:</t:label>
            <t:textfield t:id="tfPassword" t:value="password"/>
        </p>
        <p>
            <t:label for="tfFirstName">first name:</t:label>
            <t:textfield t:id="tfFirstName" t:value="firstName"/>
        </p>
        <p>
            <t:label for="tfLastName">last name:</t:label>
            <t:textfield t:id="tfLastName" t:value="lastName"/>
        </p>
        <p>
            <t:label for="tfEmail">email:</t:label>
            <t:textfield t:id="tfEmail" t:value="email"/>
        </p>
        <p>
            <t:label for="type">type:</t:label>
            <t:select t:id="type" model="literal:costumer,administrator"/>
        </p>
        <p>
            <input type="submit" name="bRegister" id="bRegister" value="Register"/>
        </p>
    </t:form>
</t:block>
<t:block id="congratulations">
    <p>
        You have successfully registered!
    </p>

    <p>
        Continue
        <a t:type="PageLink" t:page="Index">Login page</a>
    </p>
</t:block>
</html>