<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd">
<head>
    <title>Hello World Page</title>
</head>
<body>
<h1>Cart</h1>
<ul t:type="Loop" t:source="ordersItemsInChart" t:value="currentItem">
    <li>
        Product:${currentItemId}
        Title:${currentItem.product.title}
        Wonted amount: ${currentItem.amount}
        Price: ${currentItem.price}
    </li>
</ul>
<p>
    <t:form t:id="fPurchaseOrder">
        <input type="submit" name="bPurchaseOrder" id="bPurchaseOrder" value="Purchase Order"/>
    </t:form>
</p>

<p>
    [
    <t:pagelink page="Index">Index</t:pagelink>
    ]
    [
    <t:pagelink page="AddProduct">AddProduct</t:pagelink>
    ]
    [
    <t:pagelink page="BrowseProducts">BrowseProduct</t:pagelink>
    ]
    [
    <t:pagelink page="CostumerInfo">CostumerInfo</t:pagelink>
    ]
    [
    <t:pagelink page="Register">Register</t:pagelink>
    ]
    [
    <t:pagelink page="Cart">Cart</t:pagelink>
    ]
</p>
</body>
</html>