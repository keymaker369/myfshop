<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd" xmlns:p="tapestry:parameter">
<head>
    <title>Hello World Page</title>
</head>
<body>
<h1>ShowProduct</h1>
<t:if test="product">
    <ul>
        <li>Title: ${product.title}</li>
        <li>Amount in stock: ${product.amountInStock}</li>
        <li>Price: ${product.price}</li>
        <t:form t:id="fAddToCart">
            <t:textfield t:id="tfWontedAmount" t:value="wontedAmount"/>
            <input type="submit" name="bInsertInCart" id="bInsertInCart" value="Add to cart"/>
        </t:form>
    </ul>
    <p:else>
        Unknown product.
    </p:else>
</t:if>
<p>
    [
    <t:pagelink page="Index">Index</t:pagelink>
    ]
    [
    <t:pagelink page="AddProduct">AddProduct</t:pagelink>
    ]
    [
    <t:pagelink page="BrowseProducts">BrowseProduct</t:pagelink>
    ]
    [
    <t:pagelink page="CostumerInfo">CostumerInfo</t:pagelink>
    ]
    [
    <t:pagelink page="Register">Register</t:pagelink>
    ]
    [
    <t:pagelink page="Cart">Cart</t:pagelink>
    ]
</p>
</body>
</html>