<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd">
<head>
    <title>Hello World Page</title>
</head>
<body>
<h1>BrowseProducts</h1>
<ul t:type="Loop" t:source="productsService.retrieve()" t:value="currentProduct">
    <li>
        <a t:type="PageLink" t:page="ShowProduct" t:context="currentProductId">
            Product:${currentProductId}
            Title:${currentProduct.title}
            Amount in stock: ${currentProduct.amountInStock}
            Price: ${currentProduct.price}
        </a>
    </li>
    <li>
        [ <a t:type="PageLink" t:page="RemoveProduct" t:context="currentProductId">remove</a> ]
        [ <a t:type="PageLink" t:page="AlterProduct" t:context="currentProductId">alter</a> ]
        [ <a t:type="PageLink" t:page="ReactivateProduct" t:context="currentProductId">reactivate</a> ]
    </li>
</ul>
<p>
    [
    <t:pagelink page="Index">Index</t:pagelink>
    ]
    [
    <t:pagelink page="AddProduct">AddProduct</t:pagelink>
    ]
    [
    <t:pagelink page="BrowseProducts">BrowseProduct</t:pagelink>
    ]
    [
    <t:pagelink page="CostumerInfo">CostumerInfo</t:pagelink>
    ]
    [
    <t:pagelink page="Register">Register</t:pagelink>
    ]
    [
    <t:pagelink page="Cart">Cart</t:pagelink>
    ]
</p>
</body>
</html>