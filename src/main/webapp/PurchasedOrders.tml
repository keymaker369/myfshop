<html t:type="layout" title="Purchased orders"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
      xmlns:p="tapestry:parameter">
<t:if t:test="userExists">
    <t:if test="user.getOrders()">
        <ul t:type="Loop" t:source="user.getOrders()" t:value="currentOrder">
            <li>
                Commit date:${currentOrder.commitDate}
                <!--Numer of items:${currentOrder.ordersItems.size()}-->
            </li>
        </ul>
        <p:else>
            ${user.getUsername()}, you do not have any orders.
        </p:else>
    </t:if>
</t:if>
</html>